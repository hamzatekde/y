  <h1>Benimle sevgili olur musun? 💕</h1>

  <button class="yes" onclick="sayYes()">Evet</button>
  <button class="no" onclick="sayNo()">Hayır</button>

  <div id="result"></div>

  <script>
    function sayYes() {
      document.getElementById("result").innerHTML = `
        <h2>Seni seviyorum ❤️</h2>
        <div class="heart">💖💖💖</div>
      `;
    }

    function sayNo() {
      alert("Bu seçeneği seçme! 😠");
    }
